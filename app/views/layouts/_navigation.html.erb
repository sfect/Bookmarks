<ul class="nav">
  <li>
    <%= link_to "ソーシャルブックマーク", root_path, :class => 'brand' %>
  </li>

  <div class='btn-group nav_item'>
    <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
      カテゴリー<span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>
      <% Category.all.each do |category| %>
        <li>
          <%= link_to category.name, category_path(category)%>
        </li>
      <% end %>
      <li class='divider'></li>
      <li>
        <%= link_to(new_category_path) do %>
          <i class="icon-plus"></i>
          新規カテゴリー
          <% end %>
      </li>
    </ul>
  </div>

  <% if logged_in? %>
    <div class='nav_item'>
      <%= link_to 'ウェブページを投稿する', new_post_path, class: 'btn btn-success btn-small' %>
    </div> 
    <div class='btn-group nav_item'>
      <%= link_to('', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown') do %>
        <%= current_user.username %>
        <span class='caret'></span>
      <% end %>
      <ul class='dropdown-menu'>
        <li>
          <%= link_to edit_user_path(current_user) do %>
            <i class='icon-pencil'></i>
            プロフィールを編集
          <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user) do %>
            <i class='icon-user'></i>
            プロフィール
          <% end %>
        </li>
        <li>
          <%= link_to logout_path do %>
            <i class='icon-circle-arrow-left'></i>
            ログアウト
          <% end %>
        </li>
      </ul>
    </div>
  <% else %>
    <div class='nav_item'>
      <%= link_to 'ユーザー登録', register_path, class: 'btn btn-success btn-small' %>
    </div> 
    <div class='nav_item'>
      <%= link_to 'ログイン', login_path, class: 'btn btn-small' %>
    </div> 
  <% end %>

</ul>