<h4>ログインしてください</h4>

<div class='well'>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= label_tag :ユーザー名 %>
      <%= text_field_tag :username, params[:username] || '' %>
    </div>
    <div class='control-group'>
      <%= label_tag :パスワード %>
      <%= password_field_tag :password, params[:password] || '' %>
    </div>
    <%= submit_tag "ログイン", class: 'btn btn-success' %>
  <% end %>
</div>
