<h4>Please login.</h4>

<div class='well'>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= label_tag :Username %>
      <%= text_field_tag :username, params[:username] || '' %>
    </div>
    <div class='control-group'>
      <%= label_tag :Password %>
      <%= password_field_tag :password, params[:password] || '' %>
    </div>
    <%= submit_tag "Login", class: 'btn btn-success' %>
  <% end %>
</div>
